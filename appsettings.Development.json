{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Telemetry": {
    "Enabled": true,
    "Exporter": "otlp",
    "Otlp": {
      "Endpoint": "http://localhost:4317",
      "EnableTracing": true,
      "EnableMetrics": true,
      "EnableLogging": true
    },
    "Prometheus": {
      "Endpoint": "/metrics",
      "Enabled": true
    }
  },
  "ClientActivity": {
    "Enabled": true,
    "MaxClients": 1000,
    "InactivityThreshold": "24:00:00",
    "CleanupInterval": "00:10:00",
    "RollingWindowMinutes": 60
  }
}
