{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Security": {
    "BcryptRounds": 10,
    "Jwt": {
      "Issuer": "knk-api-dev",
      "Audience": "knk-app-dev",
      "Secret": "dev-secret-key-change-in-production-environments-only",
      "AccessTokenMinutes": 30,
      "RefreshTokenDays": 30
    }
  },
  "Telemetry": {
    "Enabled": true,
    "Exporter": "otlp",
    "Otlp": {
      "Endpoint": "http://localhost:4317",
      "EnableTracing": true,
      "EnableMetrics": true,
      "EnableLogging": true
    },
    "Prometheus": {
      "Endpoint": "/metrics",
      "Enabled": true
    }
  },
  "ClientActivity": {
    "Enabled": true,
    "MaxClients": 1000,
    "InactivityThreshold": "24:00:00",
    "CleanupInterval": "00:10:00",
    "RollingWindowMinutes": 60
  }
}
