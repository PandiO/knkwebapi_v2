{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MySqlDbConnection": "Server=192.168.50.119;Database=knightsandkings_dev_v2;User=user;Password=password;Allow User Variables=True;"
  },
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5000",
  "Security": {
    "BcryptRounds": 10,
    "LinkCodeExpirationMinutes": 20,
    "SoftDeleteRetentionDays": 90,
    "Jwt": {
      "Issuer": "knk-api",
      "Audience": "knk-app",
      "Secret": "REPLACE_WITH_SECURE_SECRET_IN_PRODUCTION",
      "AccessTokenMinutes": 30,
      "RefreshTokenDays": 30
    }
  },
  "Telemetry": {
      "Enabled": true,
      "Exporter": "otlp",
      "Otlp": {
        "Endpoint": "http://localhost:4317",
        "EnableTracing": true,
        "EnableMetrics": true,
        "EnableLogging": true
      },
      "Prometheus": {
        "Endpoint": "/metrics",
        "Enabled": true
      }
    },
    "ClientActivity": {
      "Enabled": true,
      "MaxClients": 1000,
      "InactivityThreshold": "24:00:00",
      "CleanupInterval": "00:10:00",
      "RollingWindowMinutes": 60
    }
}
